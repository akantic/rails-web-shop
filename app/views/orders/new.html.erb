<h1> Checkout </h1>

<table class="table table-striped">
  <tr>
    <th> </th>
    <th> Manufacturer </th>
    <th> Name </th>
    <th> Price </th>
    <th> Quantity </th>
    <th> Subtotal </th>
  </tr>
  <% @order.order_products.each do |order_product| %>
      <tr>
        <td> <%= image_tag order_product.product.product_images.first.image.cart_thumb.url %> </td>
        <td> <%= order_product.product.manufacturer.name %> </td>
        <td> <%= order_product.product.name %> </td>
        <td> <%= order_product.product.cost %> </td>
        <td> <%= order_product.quantity %> </td>
        <td> <%= order_product.total_price %> </td>
      </tr>
  <% end %>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th>Total:</th>
    <th> <%= @order.total %> </th>
  </tr>
</table>

<%= button_to 'Complete order', order_path(current_order), method: :put %>
