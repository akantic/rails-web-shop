<div class="devise-register">

<h2>Edit your profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email, class: "devise-label"  %>
    <%= f.email_field :email, autofocus: true , class: "form-control devise-field"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password, class: "devise-label"  %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control devise-field" %>
    (leave blank if you don't want to change it)
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: "devise-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control devise-field" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password, class: "devise-label" %>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control devise-field" %>
  </div>
      <div class="text-center">
        <br>
        <h3> Shipping address </h3>
        <br>
      </div>
  <div class="field form-group">
      <%= f.label :country, class: "devise-label" %>
      <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class: "form-control devise-field"}) %>
  </div>

  <div class="field form-group">
    <%= f.label :address, class: "devise-label" %>
    <%= f.text_field :address, class: "form-control devise-field"%>
  </div>

  <div class="field form-group">
    <%= f.label :postal_code, class: "devise-label" %>
    <%= f.text_field :postal_code, class: "form-control devise-field"%>
  </div>

  <div class="field form-group">
    <%= f.label :city, class: "devise-label" %>
    <%= f.text_field :city, class: "form-control devise-field"%>
  </div>


  <div class="actions">
    <%= f.submit "Update", class: "btn btn-default" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
</div>